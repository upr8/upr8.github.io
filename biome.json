{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"organizeImports": {
		"enabled": false
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [
			".devcontainer",
			".vscode",
			"tsconfig.json",
			"package.json",
			"package-lock.json",
			"*.md",
			"LICENSE"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"performance": {
				"noAccumulatingSpread": "off"
			}
		}
	}
}
