{
  "name": "personal-web-site",
  "version": "2.0.0",
  "private": false,
  "description": "A personal website built with Astro.",
  "author": "Saeed Asaiyan",
  "keywords": [
    "astro",
    "blog",
    "personal-website"
  ],
  "scripts": {
    "clean": "rm -rf .astro dist",
    "diagrams": "for f in $(find data -name '*.d2'); do d2 \"$f\" \"$f.svg\" --theme 0; done",
    "dev": "npm run diagrams && astro dev",
    "start": "astro dev",
    "build": "npm run diagrams && astro build",
    "preview": "astro preview",
    "check": "astro check",
    "gh-pages-action": "gh-pages -d dist -b release --dotfiles --remove '**/*'",
    "deploy-action": "npm run build && npm run gh-pages-action",
    "deploy": "npm run build && gh-pages -d dist -b release --dotfiles --remove '**/*'",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "typecheck": "astro check && tsc --noEmit",
    "biome:check": "biome check .",
    "biome:check:apply": "biome check . --write",
    "biome:check:apply:unsafe": "biome check . --apply-unsafe",
    "biome:format": "biome format . --write",
    "fix": "npm run biome:format && npm run biome:check:apply",
    "fix:unsafe": "npm run biome:format && npm run typecheck && npm run biome:check:apply:unsafe"
  },
  "license": "MIT",
  "dependencies": {
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/rss": "^4.0.14",
    "@astrojs/sitemap": "^3.6.1",
    "@fontsource-variable/ibm-plex-sans": "^5.2.8",
    "@fontsource/ibm-plex-mono": "^5.2.7",
    "@fontsource/ibm-plex-serif": "^5.2.7",
    "@shikijs/transformers": "^3.21.0",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^5.16.8",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-external-links": "^3.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@biomejs/biome": "2.3.10",
    "@types/node": "^24.10.4",
    "gh-pages": "^6.3.0",
    "tailwindcss": "^4.1.18",
    "typescript": "^5.9.3"
  }
}
