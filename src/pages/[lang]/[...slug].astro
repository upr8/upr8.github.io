---
import { getCollection, render } from 'astro:content';
import type { BlogEntry, LibraryEntry } from '@/types';
import BaseLayout from '@/layouts/BaseLayout.astro';
import TagList from '@/components/tags/TagList.astro';

export async function getStaticPaths() {
  const langs: Array<'en' | 'fa'> = ['en', 'fa'];
  const paths: Array<{
    params: { lang: string; slug: string };
    props: { entry: BlogEntry | LibraryEntry; type: 'blog' | 'library' };
  }> = [];

  for (const lang of langs) {
    // Get blog posts
    const posts = await getCollection('blog', (entry: BlogEntry) =>
      entry.data.published && entry.data.lang === lang
    );

    // Get books with reviews
    const books = await getCollection('library', (entry: LibraryEntry) =>
      entry.data.published && entry.data.lang === lang && entry.data.hasReview
    );

    // Add blog posts paths
    for (const post of posts) {
      // Extract slug from id (e.g., "bash-cheatsheet/index.en" -> "bash-cheatsheet")
      const slug = post.id.split('/')[0];
      paths.push({
        params: { lang, slug },
        props: { entry: post, type: 'blog' },
      });
    }

    // Add book review paths
    for (const book of books) {
      const slug = book.id.split('/')[0];
      paths.push({
        params: { lang, slug },
        props: { entry: book, type: 'library' },
      });
    }
  }

  return paths;
}

const { lang } = Astro.params as { lang: 'en' | 'fa'; slug: string };
const { entry } = Astro.props;
const dir = lang === 'fa' ? 'rtl' : 'ltr';

const { Content } = await render(entry);
---

<BaseLayout
  title={entry.data.title}
  description={entry.data.desc}
  lang={lang}
  dir={dir}
>
  <article class="mt-8">
    <!-- Article content -->
    <div class="post-body">
      <Content />
    </div>

    <!-- Article metadata at the end -->
    <div class="mt-8 text-sm text-secondary">
      {entry.data.tags && entry.data.tags.length > 0 && (
				<div class="mt-32">
					<p class="mt-8 text-center text-secondary">Tags of this Post:</p>
          <TagList tags={entry.data.tags} lang={lang} isCenter={true} />
        </div>
      )}
    </div>
  </article>
</BaseLayout>

<script>
  // Copy icon SVG
  const copyIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16"><path d="M4 1.5H3a2 2 0 0 0-2 2V14a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2V3.5a2 2 0 0 0-2-2h-1v1h1a1 1 0 0 1 1 1V14a1 1 0 0 1-1 1H3a1 1 0 0 1-1-1V3.5a1 1 0 0 1 1-1h1z"/><path d="M9.5 1a.5.5 0 0 1 .5.5v1a.5.5 0 0 1-.5.5h-3a.5.5 0 0 1-.5-.5v-1a.5.5 0 0 1 .5-.5zm-3-1A1.5 1.5 0 0 0 5 1.5v1A1.5 1.5 0 0 0 6.5 4h3A1.5 1.5 0 0 0 11 2.5v-1A1.5 1.5 0 0 0 9.5 0z"/></svg>`;
  const checkIcon = `<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" viewBox="0 0 16 16"><path d="M12.736 3.97a.733.733 0 0 1 1.047 0c.286.289.29.756.01 1.05L7.88 12.01a.733.733 0 0 1-1.065.02L3.217 8.384a.757.757 0 0 1 0-1.06.733.733 0 0 1 1.047 0l3.052 3.093 5.4-6.425z"/></svg>`;

  // Add copy buttons to code blocks
  document.querySelectorAll('.post-body pre').forEach((pre) => {
    const button = document.createElement('button');
    button.className = 'copy-button';
    button.setAttribute('aria-label', 'Copy code');
    button.insertAdjacentHTML('beforeend', copyIcon);

    button.addEventListener('click', async () => {
      const code = pre.querySelector('code')?.textContent || '';
      await navigator.clipboard.writeText(code);
      button.classList.add('copied');
      button.replaceChildren();
      button.insertAdjacentHTML('beforeend', checkIcon);
      setTimeout(() => {
        button.classList.remove('copied');
        button.replaceChildren();
        button.insertAdjacentHTML('beforeend', copyIcon);
      }, 2000);
    });

    pre.appendChild(button);
  });
</script>
