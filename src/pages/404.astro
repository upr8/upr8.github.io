---
import BaseLayout from '@/layouts/BaseLayout.astro';
---

<BaseLayout title="Page Not Found" description="The page you're looking for doesn't exist.">
  <div class="py-16 text-center">
    <h2 class="text-6xl font-bold text-primary mb-4">404</h2>
    <p class="text-xl text-secondary mb-8">
      The page you're looking for doesn't exist.
    </p>
    <a
      href="/"
      class="inline-block px-6 py-3 bg-accent-primary text-white rounded-lg hover:opacity-90 transition-opacity no-underline"
    >
      Go Home
    </a>
  </div>
</BaseLayout>
