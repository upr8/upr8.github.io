---
interface Props {
  tags: string[];
  lang?: 'en' | 'fa';
  isCenter?: boolean;
}

const { tags, lang = 'en', isCenter = true } = Astro.props;
---

<ul
  class={`flex flex-wrap items-baseline mt-2 ms-1 @md:mt-0 ${
    isCenter ? 'justify-center' : 'justify-start'
  }`}
>
  {tags.map((tag) => (
    <li class="z-10 inline-block px-2 m-1 text-sm border-2 rounded-full shadow-xs bg-nav text-primary">
      <a href={`/${lang}/tag/${tag}`} class="no-underline hover:text-accent-primary transition-colors">
        #{tag}
      </a>
    </li>
  ))}
</ul>
