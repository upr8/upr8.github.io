---
import NavBar from './NavBar.astro';

interface Props {
  pageTitle: string;
  pageSubtitle?: string;
  lang?: 'en' | 'fa';
}

const { pageTitle, pageSubtitle = '', lang = 'en' } = Astro.props;
---

<header class="border-b-2 border-primary">
  <NavBar lang={lang} />
  <div class="pt-16 pb-8 text-center">
    <h1 class="text-4xl md:text-5xl font-extrabold text-primary leading-tight tracking-tight">
      {pageTitle}
    </h1>
    {pageSubtitle && (
      <p class="mt-3 text-lg md:text-xl font-medium text-secondary max-w-2xl mx-auto">
        {pageSubtitle}
      </p>
    )}
  </div>
</header>
