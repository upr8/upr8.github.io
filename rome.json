{
	"$schema": "https://docs.rome.tools/schemas/12.1.0/schema.json",
	"organizeImports": {
		"enabled": false
	},
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [
			".devcontainer",
			"tsconfig.json",
			"package-lock.json",
			"*.md",
			"LICENSE"
		]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		}
	}
}
