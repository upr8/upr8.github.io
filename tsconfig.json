{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "esnext"
    ],
    "jsx": "react",
    "module": "esnext",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "@/components": ["src/components"],
      "@/components/*": ["src/components/*"],
      "@/gatsby": ["src/gatsby"],
      "@/gatsby/*": ["src/gatsby/*"],
      "@/hooks": ["src/hooks"],
      "@/hooks/*": ["src/hooks/*"],
      "@/states": ["src/states"],
      "@/states/*": ["src/states/*"],
      "@/styles": ["src/styles"],
      "@/styles/*": ["src/styles/*"],
      "@/utils": ["src/utils"],
      "@/utils/*": ["src/utils/*"],      
    },
    "types": ["vitest/globals"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
    "./gatsby-node.ts",
    "./gatsby-config.ts",
    "./plugins/**/*"
  ]
}
